{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "repositories": [
        "stackitcloud/stackit-sdk-generator"
    ],
    "enabledManagers": [
        "github-actions"
    ],
    "regexManagers": [
        {
            "customType": "regex",
            "fileMatch": [
                "generate-sdk.sh"
            ],
            "matchStrings": [
                "# Renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?) versioning=(?<versioning>.*?)?\\sGENERATOR_VERSION=\\\"?(?<currentValueNumber>.*?)\\\"\\s"
            ],
            "currentValueTemplate": "v{{{currentValueNumber}}}",
            "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
        }
    ]
}